@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome to the Faculty Dashboard</h1>

    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-house-door-fill fs-2 text-primary mb-3"></i>
                    <h5 class="card-title">Home</h5>

                    <a asp-controller="Faculty" asp-action="Dashboard" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-upload fs-2 text-success mb-3"></i>
                    <h5 class="card-title">Upload MCQs</h5>

                    <a asp-controller="Faculty" asp-action="UploadMCQs" class="btn btn-success">Upload</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-journal-text fs-2 text-info mb-3"></i>
                    <h5 class="card-title">View Chapters</h5>

                    <a asp-controller="Subject" asp-action="Index" class="btn btn-info text-white">View</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-plus-circle fs-2 text-warning mb-3"></i>
                    <h5 class="card-title">Add Chapter</h5>

                    <a asp-controller="Subject" asp-action="Create" class="btn btn-warning text-dark">Add</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-check fs-2 text-danger mb-3"></i>
                    <h5 class="card-title">Exams</h5>

                    <a asp-controller="Exam" asp-action="Index" class="btn btn-danger">Create Exam</a>
                </div>
            </div>
        </div>

    </div>
</div>
