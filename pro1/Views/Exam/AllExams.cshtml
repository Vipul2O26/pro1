@model List<pro1.Models.Exams>
@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewBag.Title = "Create Exam for " + ViewBag.SubjectName;
}

<h2>All Exams</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Exam ID</th>
            <th>Total Questions</th>
            <th>Duration</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.ExamID</td>
                <td>@exam.TotalQuestions</td>
                <td>@exam.DurationTime minutes</td>
                <td>@exam.CreatedAt.ToString("g")</td>
                <td>
                    <a href="@Url.Action("ExamDetails", "Exam", new { id = exam.ExamID })" class="btn btn-primary">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
