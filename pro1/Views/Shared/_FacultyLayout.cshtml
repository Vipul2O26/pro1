@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserID");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var fullName = HttpContextAccessor.HttpContext?.Session.GetString("FullName") ?? "Faculty";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Faculty Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pro1.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="#">Faculty Panel</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarFaculty" aria-controls="navbarFaculty" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarFaculty">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <a class="nav-link" asp-controller="Faculty" asp-action="Dashboard"><i class="bi bi-house"></i> Home</a>
                        <a class="nav-link" asp-controller="Faculty" asp-action="UploadMCQs"><i class="bi bi-house"></i>Upload mcq</a>
                        <a class="nav-link" asp-controller="Subject" asp-action="Index"><i class="bi bi-house"></i>ViewAllChapters</a>
                        <a class="nav-link" asp-controller="Subject" asp-action="Create"><i class="bi bi-house"></i>Add Chapters</a>
                        <a class="nav-link" asp-controller="Exam" asp-action="Index"><i class="bi bi-house"></i>Exam</a>
                        <a class="nav-link" asp-controller="Exam" asp-action="AllExams"><i class="bi bi-house"></i>All Exam</a>

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-light" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle fs-5"></i> <span class="fw-semibold">@fullName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
