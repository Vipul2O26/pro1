@{
    ViewData["Title"] = "Admin Dashboard";
    var name = Context.Session.GetString("FullName");
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="fw-bold">Welcome, <span class="text-primary">@name</span> (Admin)</h2>
            <p class="text-muted">Manage users and view system logs from your dashboard.</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Manage User Card -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-people-fill fs-1 text-info"></i>
                    </div>
                    <div>
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text">View, edit or delete registered users.</p>
                        <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="AllUsers">Go to User Management</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Audit Logs Card -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-clock-history fs-1 text-warning"></i>
                    </div>
                    <div>
                        <h5 class="card-title">Audit Logs</h5>
                        <p class="card-text">Track login and logout history of all users.</p>
                        <a class="btn btn-outline-warning" asp-controller="Admin" asp-action="Log">View Audit Logs</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
