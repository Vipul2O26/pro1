@model pro1.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2>Are you sure you want to delete this user?</h2>

<div>
    <p><strong>User ID:</strong> @Model.UserID</p>
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Role</p>
</div>



<form asp-action="Delete" asp-route-id="@Model.UserID" method="post">
    <button type="submit" class="btn btn-danger">Confirm Deletion</button>
    <a href="@Url.Action("AllUsers", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
