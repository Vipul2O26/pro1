@model IEnumerable<pro1.Models.MCQQuestion>

@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewData["Title"] = "MCQ Questions for " + ViewBag.UnitName;
}

<div class="container mt-4">
    <h3 class="text-success mb-3">@ViewData["Title"]</h3>
    <a asp-action="ViewUnits" asp-route-subject="@ViewBag.SubjectTitle" asp-route-code="@ViewBag.SubjectCode" class="btn btn-sm btn-secondary mb-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Back
    </a>


    <table class="table table-bordered table-hover">
        <thead class="table-success">
            <tr>
                <th>Question</th>
                <th>Option A</th>
                <th>Option B</th>
                <th>Option C</th>
                <th>Option D</th>
                <th>Correct</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model)
            {
                <tr>
                    <td>@q.QuestionText</td>
                    <td>@q.OptionA</td>
                    <td>@q.OptionB</td>
                    <td>@q.OptionC</td>
                    <td>@q.OptionD</td>
                    <td>@q.CorrectAnswer</td>
                </tr>
            }
        </tbody>
    </table>
</div>
