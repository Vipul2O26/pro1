@model IEnumerable<pro1.Models.SubjectUnit>

@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewData["Title"] = "Units for " + ViewBag.SubjectTitle;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-success mb-0"><i class="bi bi-list-ol me-2"></i> @ViewData["Title"]</h3>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Subject List
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-success text-dark">
                        <tr>
                            <th scope="col"><i class="bi bi-hash"></i> ID</th>
                            <th scope="col"><i class="bi bi-file-text me-1"></i> Unit Name</th>
                            <th scope="col"><i class="bi bi-layers me-1"></i> Semester</th>
                            <th scope="col"><i class="bi bi-upc-scan me-1"></i> Subject Code</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var unit in Model)
                        {
                            <tr>
                                <td>@unit.ID</td>
                                <td>@unit.UnitName</td>
                                <td><span class="badge bg-info text-dark">Sem @unit.Semester</span></td>
                                <td>@unit.SubjectCode</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
