@model IEnumerable<dynamic> 

@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewData["Title"] = "Subject List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-journal-text me-2"></i> @ViewData["Title"]</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-dark">
                            <i class="bi bi-book me-1"></i> @item.SubjectName
                        </h5>
                        <p class="card-text mb-1"><strong>Subject Code:</strong> @item.SubjectCode</p>
                        <p class="card-text mb-3"><strong>Semester:</strong> <span class="badge bg-info text-dark">Sem @item.Semester</span></p>
                        <a asp-action="ViewUnits" asp-route-subject="@item.SubjectName" asp-route-code="@item.SubjectCode" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-eye me-1"></i> View Units
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
