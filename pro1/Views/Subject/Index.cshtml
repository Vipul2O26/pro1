@model IEnumerable<pro1.Models.SubjectUnit>

@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewData["Title"] = "Subject Units List";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i> @ViewData["Title"]</h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Add New Subject Unit
            </a>
        </div>

        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Subject Name</th>
                            <th>Semester</th>
                            <th>Subject Code</th>
                            <th>Unit Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.SubjectName</td>
                                <td><span class="badge bg-info text-dark">Sem @item.Semester</span></td>
                                <td>@item.SubjectCode</td>
                                <td>@item.UnitName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
