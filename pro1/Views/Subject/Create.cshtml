@model pro1.Models.SubjectUnit

@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewData["Title"] = "Add Subject Unit";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-journal-plus me-2"></i> @ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="SubjectName" class="form-label"></label>
                    <input asp-for="SubjectName" class="form-control" />
                    <span asp-validation-for="SubjectName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Semester" class="form-label"></label>
                    <select asp-for="Semester" class="form-select">
                        <option value="">-- Select Semester --</option>
                        @for (int i = 1; i <= 8; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SubjectCode" class="form-label"></label>
                    <input asp-for="SubjectCode" class="form-control" />
                    <span asp-validation-for="SubjectCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UnitName" class="form-label"></label>
                    <input asp-for="UnitName" class="form-control" />
                    <span asp-validation-for="UnitName" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Add Subject Unit
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

